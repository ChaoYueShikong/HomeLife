<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/view"
    tools:context=".biz.login.ForgetPwdActivity">
    <include layout="@layout/title"/>

    <RelativeLayout
        android:id="@+id/new_phone_ll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/ffffffff"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/color_666666"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            />

        <EditText
            android:id="@+id/new_phone_et"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_toRightOf="@+id/phone_tv"
            android:background="@color/ffffffff"
            android:digits="@string/rule_password"
            android:hint="请输入手机号"
            android:inputType="textPassword"
            android:maxLength="18"
            android:textColor="@color/color_323232"
            android:textColorHint="@color/color_999999"
            android:textCursorDrawable="@drawable/et_cusor_shape"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_f5f5f5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/old_password_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/ffffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/yanzhengma"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码"
                android:textColor="@color/color_666666"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/verification_code_et"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/get_verification_code_tv"
                android:layout_toRightOf="@+id/yanzhengma"
                android:background="@color/ffffffff"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/color_323232"
                android:textColorHint="@color/color_999999"
                android:textCursorDrawable="@drawable/et_cusor_shape"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/get_verification_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="发送验证码"
                android:textColor="@color/themeColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_f5f5f5" />

        <RelativeLayout
            android:id="@+id/new_password_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/ffffffff"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/set_pwd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:textColor="@color/color_666666"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                />

            <EditText
                android:id="@+id/new_password_et"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_toRightOf="@+id/set_pwd"
                android:background="@color/ffffffff"
                android:digits="@string/rule_password"
                android:hint="请设置6-16位登录密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@color/color_323232"
                android:textColorHint="@color/color_999999"
                android:textCursorDrawable="@drawable/et_cusor_shape"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/close_eye_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:src="@drawable/showhpwd_selector"
                android:layout_marginRight="16dp"
                android:textOff=""
                android:textOn=""
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_f5f5f5" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_f5f5f5" />

    </LinearLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_selector_new"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>